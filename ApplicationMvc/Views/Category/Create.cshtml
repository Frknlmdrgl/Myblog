@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Gönderi Oluştur</h2>
            <hr />
        </div>

        @*<div asp-validation-summary="All">   </div>*@


        <div class="mb-3">
            <label asp-for="Name">İsim</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SecondName">Soyisim</label>
            <input asp-for="SecondName" class="form-control" />
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Age">Yaşınız</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Mesajınız</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Gönder</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">İletişim sayfasına geri dön</a>
    </div>
</form>
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

